# API Configuration
API_SECRET_KEY=your-dev-secret-key-123
JWT_SECRET_KEY=your-dev-jwt-key-123
ADMIN_API_KEY=your-dev-admin-key-123
WEBSITE_API_KEY=your-dev-website-key-123
API_KEY_HEADER_NAME=X-API-Key
REQUIRE_API_KEY=false

# Server Settings
PORT=8000
WORKERS=4
ENV=development

# Download Settings
MAX_DOWNLOADS=50
MAX_CONCURRENT_DOWNLOADS=10
DOWNLOAD_EXPIRY_MINUTES=5
VERIFY_SSL=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8
RATE_LIMIT_HEADERS=X-Real-IP,X-Forwarded-For

# CORS Settings
CORS_ORIGINS=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Request-ID,X-API-Key,Accept,Origin,Cache-Control

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090